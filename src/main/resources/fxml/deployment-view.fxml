<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import io.github.palexdev.materialfx.controls.*?>

<VBox fx:id="rootContainer" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.openteam.controller.DeploymentController">
   <children>
      <HBox styleClass="toolbar">
         <children>
            <Label styleClass="view-title" text="Software Deployments" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Search:" styleClass="filter-label" />
            <TextField fx:id="searchField" prefWidth="200.0" promptText="Search deployments..." styleClass="search-field" />
            <Label text="Environment:" styleClass="filter-label" />
            <ComboBox fx:id="environmentFilter" prefWidth="140.0" styleClass="environment-filter-combo" />
            <Label text="Status:" styleClass="filter-label" />
            <ComboBox fx:id="statusFilter" prefWidth="140.0" styleClass="deployment-status-filter-combo" />
            <CheckBox fx:id="showArchivedCheckBox" styleClass="archive-checkbox" text="Show Archived" />
         </children>
      </HBox>
      
      <SplitPane fx:id="mainSplitPane" dividerPositions="0.65" VBox.vgrow="ALWAYS">
         <items>
            <VBox>
               <children>
                  <TableView fx:id="deploymentsTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="releaseNameColumn" prefWidth="150.0" text="Release" />
                        <TableColumn fx:id="versionColumn" prefWidth="80.0" text="Version" />
                        <TableColumn fx:id="ticketNumberColumn" prefWidth="100.0" text="Ticket #" />
                        <TableColumn fx:id="environmentColumn" prefWidth="90.0" text="Environment" />
                        <TableColumn fx:id="statusColumn" prefWidth="90.0" text="Status" />
                        <TableColumn fx:id="deploymentDateColumn" prefWidth="130.0" text="Deployment Date" />
                        <TableColumn fx:id="driverColumn" prefWidth="120.0" text="Driver" />
                        <TableColumn fx:id="documentationColumn" prefWidth="120.0" text="Documentation" />
                        <TableColumn fx:id="commentsColumn" prefWidth="100.0" text="Comments" />
                        <TableColumn fx:id="archivedColumn" prefWidth="80.0" text="Archived" />
                     </columns>
                  </TableView>
                  <HBox styleClass="button-bar">
                     <children>
                        <MFXButton onAction="#createDeployment" styleClass="toolbar-button" text="Add New" />
                        <MFXButton onAction="#editDeployment" styleClass="toolbar-button" text="Edit" />
                        <MFXButton onAction="#deleteDeployment" styleClass="toolbar-button" text="Delete" />
                        <MFXButton onAction="#unarchiveDeployment" styleClass="toolbar-button" text="Unarchive" />
                        <Region HBox.hgrow="ALWAYS" />
                        <MFXButton onAction="#clearSelection" text="Clear Selection" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <VBox>
               <children>
                  <Label styleClass="details-title" text="Release Notes" />
                  <TextArea fx:id="releaseNotesTextArea" editable="false" VBox.vgrow="ALWAYS" wrapText="true" />
               </children>
            </VBox>
         </items>
      </SplitPane>
      
      <HBox styleClass="status-bar">
         <children>
            <Label fx:id="statusLabel" text="Ready" />
         </children>
      </HBox>
   </children>
</VBox>