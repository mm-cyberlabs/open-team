<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import io.github.palexdev.materialfx.controls.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.openteam.controller.MainController">
   <top>
      <VBox styleClass="top-section">
         <children>
            <!-- Header Row with Logo and User Controls -->
            <HBox styleClass="header-row">
               <children>
                  <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true" styleClass="app-logo">
                     <image>
                        <Image url="@../icons/openteam-logo.png" />
                     </image>
                  </ImageView>
                  <Label styleClass="app-title" text="Open Team" />
                  <Region HBox.hgrow="ALWAYS" />
                  <HBox styleClass="top-toolbar" spacing="8" alignment="CENTER">
                     <children>
                        <!-- Role Display Box -->
                        <Label fx:id="userInfoLabel" styleClass="role-box" text="User Info" />
                        <!-- Workspace Info and Navigation in single aligned container -->
                        <VBox styleClass="workspace-container" alignment="CENTER_LEFT">
                           <children>
<!--                              <Label fx:id="workspaceInfoLabel" styleClass="workspace-info-label" text="Workspace: &#45;&#45;" />-->
                              <MFXComboBox fx:id="workspaceNavigationCombo" styleClass="workspace-navigation-combo" visible="false" 
                                           minWidth="150" maxWidth="200" prefWidth="150" />
                           </children>
                        </VBox>
                        <!-- Control Buttons aligned in same row -->
                        <MFXButton fx:id="adminButton" styleClass="toolbar-button admin-button" text="👤" visible="false" />
                        <MFXButton onAction="#refreshCurrentView" styleClass="toolbar-button refresh-button" text="🔄" />
                        <MFXButton onAction="#showAbout" styleClass="toolbar-button about-button" text="ℹ️" />
                        <MFXButton fx:id="logoutButton" styleClass="toolbar-button logout-button" text="🚪" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            
            <!-- Tab Row -->
            <HBox styleClass="tab-row">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <TabPane fx:id="mainTabPane" styleClass="main-tabs" tabClosingPolicy="UNAVAILABLE">
                     <tabs>
                        <Tab fx:id="announcementsTab" styleClass="nav-tab" text="📢 Announcements" />
                        <Tab fx:id="targetDatesTab" styleClass="nav-tab" text="🎯 Target Dates" />
                        <Tab fx:id="deploymentsTab" styleClass="nav-tab" text="🚀 Deployments" />
                     </tabs>
                  </TabPane>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <StackPane fx:id="contentArea" />
   </center>
   <bottom>
      <HBox styleClass="status-bar">
         <children>
            <Label fx:id="lastUpdateLabel" text="Last updated: --" />
         </children>
      </HBox>
   </bottom>
</BorderPane>